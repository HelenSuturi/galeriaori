<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.probook.galeriaori.MainActivity">

    <RelativeLayout
        android:layout_width="267dp"
        android:layout_height="143dp">

        <Button
            android:id="@+id/idcrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#0000FF"
            android:text="crear album" />
        <Button
            android:id="@+id/iddetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000FF"
            android:text="detalle"

            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp" />

        <ImageView
            android:id="@+id/idimage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/descarga"
            android:layout_below="@+id/idcrear" />


    </RelativeLayout>


</LinearLayout>
